        <td>
          <%= flat.sqft %>
        </td>
        <td>
          <%= (flat.value_score * 100).round %>
        </td>
        <td>
          <%= (flat.price_score * 350).round %>
        </td>
        <td>
          <%= (flat.window_score * 100).round %>
        </td>
        <td>
          <%= (flat.view_score * 50).round %>
        </td>
        <td>
          <%= (flat.floor_score * 50).round %>
        </td>
        <td>
          <%= (flat.sqft_score * 100).round %>
        </td>
      </tr>
    <% end %>
